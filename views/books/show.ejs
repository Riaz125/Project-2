<%- include('../partials/header') %>

<section id="show-page">
    <div>Title:</div>
    <div><%= book.title %></div>
    <div>Author:</div>
    <div><%= book.author %></div>
    <div>Release Year:</div>
    <div><%= book.releaseYear %></div>
    <div>Genres:</div>
    <% book.genres.forEach(function(g) { %>
        <tr>
          <td><%= g %>,</td>
        </tr>
    <% }); %>
    <div>Categories:</div>
    <% book.categories.forEach(function(c) { %>
        <tr>
          <td><%= c %>,</td>
        </tr>
    <% }); %>
  </section> 

    <br><br>
  <% if (user && !book.reviews.some(obj => obj.userId.equals(user._id))) { %>
    <h2>Reviews</h2>
    <form id="add-review-form" method="POST" action="/books/<%= book._id %>/reviews">
      <label>Review:</label>
      <textarea name="content"></textarea>
      <label>Rating:</label>
      <select name="rating">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
      </select>
      <input type="submit" value="Add Review">
    </form>
  <% } %>  

  <% if (book.reviews.length) { %>
    <table>
      <thead>
        <tr>
          <th>User</th>
          <th>Date</th>
          <th>Review</th>
          <th>Rating</th>
        </tr>
      </thead>
      <tbody>
        <% let total = 0 %>
        <% book.reviews.forEach(function(r) { %>
          <% total += r.rating %>
          <tr>
            <td><%= r.userName %></td>
            <td><%= r.createdAt.toLocaleDateString() %></td>
            <td><%= r.content %></td>
            <td><%= r.rating %></td>
            <% if (r.userId.equals(user._id)) { %>
              <form id="add-review-form" method="POST" action="/reviews/<%= r._id %>?_method=PUT">
                <label>Review:</label>
                <textarea name="content"></textarea>
                <label>Rating:</label>
                <select name="rating">
                  <option value="1">1</option>
                  <option value="2">2</option>
                  <option value="3">3</option>
                  <option value="4">4</option>
                  <option value="5">5</option>
                </select>
                <input type="submit" value="Edit Review">
              </form>
            <% } %>
          </tr>
        <% }); %>
        <tr>
          <td colspan="2"></td>
          <td><strong><%= (total / book.reviews.length).toFixed(1) %></strong></td>
        </tr>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Reviews Yet</h5>
  <% } %>

<%- include('../partials/footer') %>